@model IEnumerable<Forks1.Models.PositionViewModel>

@{
    ViewBag.Title = "Position";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PositionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PositionId })
                </td>
            </tr>
        </tbody>
    }

</table>
